<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <article class="card">

      <div class="card-block">
        <div class="row">
          <div class="col-md-12">
            <div class="card-title">
              <h4>
                {{$t 'family.form.title'}}
                <img class="pull-right" src="/static/images/icon_more.png">
              </h4>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="margin-tb-35px" id="img-cam">
              <img id="image-logo" src="/static/images/family-room.png"
                   class="card-img-top img-responsive center-block select-file"/>
              <p id="image-logo-text" class="text-center select-file">{{$t 'family.form.household'}}</p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <div class="fp-form-container padding-b-30px" id="add-application">
              <form data-toggle="validator" role="form" class="form-vertical" id="form">

                <p class="text-blue" style="padding-left: 5px">{{$t 'family.form.household'}}: </p>
                <div class="form-group">
                  <input name="household" type="text" value="{{family.name}}"
                         class="input-bg-gray form-control" readonly>
                </div>

                <p class="text-blue" style="padding-left: 5px">{{$t 'family.form.survey-user'}}: </p>
                <div class="form-group">
                  <select id="select-user" name="user" class="input-bg-gray form-control">
                  </select>
                </div>

                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-12">
                      <button type="submit" name="register-submit" id="submit" class="btn" value="Save">
                        {{$t 'general.buttons.ok'}}
                      </button>
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <div class="text-center">
                    <a href="#families/{{family.id}}" id="cancel" tabindex="5" class="">
                      {{$t 'general.buttons.cancel'}}
                    </a>
                  </div>
                </div>

              </form>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
</div>
